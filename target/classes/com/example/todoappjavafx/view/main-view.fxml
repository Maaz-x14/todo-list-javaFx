<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.todoappjavafx.controller.MainController"
            stylesheets="@../styles/Theme.css">

    <!-- Header -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="header-bar">
            <padding>
                <Insets top="12" right="16" bottom="12" left="16"/>
            </padding>
            <Label text="âœ… TaskFlow" styleClass="app-title" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="toggleThemeBtn" text="ðŸŒ™ Dark Mode" styleClass="theme-toggle-btn" />
        </HBox>
    </top>

    <!-- Search + Filter -->
    <center>
        <VBox spacing="14">
            <padding>
                <Insets top="18" right="20" bottom="18" left="20"/>
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="ðŸ” Search tasks..." styleClass="search-field"/>
                <ComboBox fx:id="priorityFilter" promptText="Filter by Priority" styleClass="filter-combo"/>
                <ProgressBar fx:id="completionProgress" prefWidth="200" styleClass="progress-bar"/>
            </HBox>

            <ScrollPane fitToWidth="true" styleClass="task-scroll">
                <ListView fx:id="taskListView" styleClass="task-list" prefHeight="400"/>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="footer-bar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Button fx:id="addTaskBtn" text="âž• Add Task" styleClass="add-task-btn" />
        </HBox>
    </bottom>
</BorderPane>
