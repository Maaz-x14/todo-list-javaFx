<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.todoappjavafx.controller.NewTaskController"
            prefWidth="400">

    <content>
        <VBox spacing="10" padding="15">
            <Label text="ðŸ“ Add New Task" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <Label text="Title:"/>
            <TextField fx:id="titleField" promptText="Enter task title"/>

            <Label text="Description:"/>
            <TextArea fx:id="descriptionField" promptText="Optional details..." prefRowCount="3"/>

            <HBox spacing="10">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Priority:"/>
                    <ComboBox fx:id="priorityCombo"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Due Date:"/>
                    <DatePicker fx:id="dueDatePicker"/>
                </VBox>
            </HBox>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:id="saveButtonType" text="Save" buttonData="OK_DONE"/>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
